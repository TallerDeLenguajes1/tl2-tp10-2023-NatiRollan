@{
    ViewData["Title"] = "Usuario"; // se encarga de definir el título de la página
}
@using EspacioKanban
@model CrearUsuarioViewModel //tipo de objeto que recibe

<main>
    <h1>Crear Usuario</h1>
    <form asp-controller="Usuario" asp-action="CrearUsuario">
        <div class="form-group">
            <label asp-for="@Model.NombreDeUsuario" class="form-label text-center">Nombre de Usuario</label>
            <input type="text" class="form-control" asp-for="@Model.NombreDeUsuario" aria-describedby="emailHelp" placeholder="Nombre de usuario" required>
            <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Contrasenia" class="form-label text-center">Contraseña</label>
            <input type="password" class="form-control" asp-for="@Model.Contrasenia" aria-describedby="emailHelp" placeholder="Contraseña" required>
            <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Rol" class="form-label text-center">Rol</label>
            <select asp-for="@Model.Rol" class="form-select" aria-label="Default select example">
                <option value="Operador" selected>Operador</option>
                <option value="Administrador">Admin</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</main>
@section Scripts {<partial name="_ValidationScriptsPartial"/>} 
