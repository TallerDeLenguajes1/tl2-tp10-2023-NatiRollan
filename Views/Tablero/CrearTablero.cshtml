@{
    ViewData["Title"] = "Crear Tablero";    
}
@using EspacioKanban
@model CrearTableroViewModel

<div class="text-center">
    <h1 class="display-4">Tablero</h1>
    <form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario"></label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control"/>
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control"/>
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control"/>
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>    
</form>
</div>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}